{
  "manifest_version": 2,
  "name": "Full Focus - Hide Recommendations on YouTube",
  "short_name": "Full Focus",
  "description": "Become productive again by hiding all Distractions on YouTube",
  "version": "0.2.1.3",
  "content_scripts": [
    {
      "css": ["css/style.css"],
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_icon": "img/true.png",
    "default_popup": "html/popup.html",
    "default_title": "Click here to open the popup"
  },
  "web_accessible_resources": ["css/show.css", "css/searchbar.css"],
  "icons": {
    "128": "img/icon.png"
  }
}
