{
    "manifest_version": 3,
    "name": "YouTube Focus",
    "version": "1.0",
    "description": "Make YouTube less distracting",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "icons": {
        "48": "img/inactive.png",
        "128": "img/inactive.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "img/inactive.png",
            "128": "img/inactive.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}