{
  "manifest_version": 3,
  "name": "Full Focus - Hide Recommendations on YouTube",
  "short_name": "Full Focus",
  "description": "Boost productivity - Hide all distractions on YouTube",
  "version": "0.2.1.3",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/worker.js"
  },
  "permissions": ["tabs"],
  "icons": {
    "128": "img/icon.png"
  }
}
